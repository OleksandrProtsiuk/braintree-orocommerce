{% block oro_inventory_level_grid_row %}
    {{ block('form_row') }}
{% endblock %}

{% block oro_inventory_level_grid_widget %}
    {% set attr = attr|merge({
    'data-level-quantity-options': {
    'quantityColumnName': 'levelQuantity',
    'unitColumnName': 'unitCode',
    'unitPrecisions': unitPrecisions,
    'quantityConstraints': quantityConstraints
    }|json_encode
    }) %}
    {{ form_widget(form, {'id': 'inventory-level-quantities', 'attr' : attr}) }}

    {% import 'OroDataGridBundle::macros.html.twig' as dataGrid %}
    {{ dataGrid.renderGrid('inventory-level-grid', {'productId': product.id}) }}
{% endblock %}

{% block oro_warehouse_collection_widget %}
    {% if prototype is defined %}
        {% set prototype_html = _self.oro_warehouse_collection_prototype(form) %}
    {% endif %}
    {% set attr = attr|merge({'class': (attr.class is defined ? attr.class ~ ' ' : '') ~ 'oro-item-collection grid-container' }) %}
    {% set id = id ~ '_collection' %}
    <div>
        <div class="row-oro">
            {% set prototype_name = form.vars.prototype_name %}
            <div {{ block('widget_container_attributes') }}>
                <table class="grid table-hover table table-bordered">
                    <thead>
                    <tr>
                        <th><span>{{ 'oro.warehouse.entity_label'|trans }}</span></th>
                        <th><span>{{ 'oro.warehouse.priority.label'|trans }}</span></th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody data-last-index="{{ form.children|length}}" data-prototype-name="{{ prototype_name }}"{% if prototype_html is defined %} data-prototype="{{ prototype_html|escape }}"{% endif %} data-content>
                    {% if form.children|length %}
                        {% for child in form.children %}
                            {{ _self.oro_warehouse_collection_prototype(child) }}
                        {% endfor %}
                    {% elseif show_form_when_empty and prototype_html is defined %}
                        {{ prototype_html|replace({(prototype_name): '0'})|raw }}
                    {% endif %}
                    </tbody>
                </table>
            </div>
            <a class="btn add-list-item" data-container=".oro-item-collection tbody" href="javascript: void(0);"><i class="fa-plus"></i>{{ 'oro.warehouse.form.add_warehouse'|trans }}</a>
        </div>
    </div>
{% endblock %}

{% macro oro_warehouse_collection_prototype(widget) %}
    {% if 'collection' in widget.vars.block_prefixes %}
        {% set form = widget.vars.prototype %}
        {% set name = widget.vars.full_name ~ '[' ~ widget.vars.prototype.vars.name ~ ']' %}
    {% else %}
        {% set form = widget %}
        {% set name = widget.vars.full_name %}
    {% endif %}
    <tr data-content="{{ name }}" data-validation-optional-group {{ block('widget_container_attributes') }}>
        {{ form_widget(form) }}
        <td>
            <button type="button" class="removeRow btn icons-holder"><i class="fa-close"></i></button>
        </td>
    </tr>
{% endmacro %}

{% block oro_warehouse_select_with_priority_widget %}
    <td>{{ form_widget(form.warehouse) }} {{ form_errors(form.warehouse) }}</td>
    <td>{{ form_widget(form.priority, { 'attr': {'class': 'priority'} }) }}{{ form_errors(form.priority) }}</td>
{% endblock %}

{% macro warehouse_address_block(form, disabled) %}
    {% set attrs = {'attr': {'data-validation': (form.vars.required ? { NotBlank: null } : {})|json_encode }, disabled: disabled } %}
    {{ form_row(form, attrs) }}
{% endmacro %}

{% block oro_warehouse_address_widget %}

{% set system = form.system is defined %}
{% set disabled = form.system.var.data|default(false) %}

    <div
        {% if system %}
            data-page-component-module="oroui/js/app/components/view-component"
            data-page-component-options="{{ {
                view: 'orowarehouse/js/app/views/warehouse-address-view',
                selectors: {
                    useSystem: '#' ~ form.system.vars.id
                }
            }|json_encode }}"
        {% endif %}
    >
        {% if system %}
            {{ form_row(form.system) }}
        {% endif %}

        {{ _self.warehouse_address_block(form.country, disabled) }}
        {{ _self.warehouse_address_block(form.region_text, disabled) }}
        {{ _self.warehouse_address_block(form.region, disabled) }}
        {{ _self.warehouse_address_block(form.postalCode, disabled) }}
        {{ _self.warehouse_address_block(form.city, disabled) }}
        {{ _self.warehouse_address_block(form.street, disabled) }}
        {{ _self.warehouse_address_block(form.street2, disabled) }}
        {{ form_rest(form) }}
    </div>
{% endblock %}
