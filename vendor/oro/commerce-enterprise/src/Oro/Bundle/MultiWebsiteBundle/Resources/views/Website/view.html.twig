{% extends 'OroUIBundle:actions:view.html.twig' %}

{% oro_title_set({params : {"%name%": entity.name|default('N/A'|trans)}}) %}

{% block pageHeader %}
    {% set breadcrumbs = {
        'entity': entity,
        'indexPath': path('oro_multiwebsite_index'),
        'indexLabel': 'oro.website.entity_plural_label'|trans,
        'entityTitle': entity.name |default('N/A'|trans)
        }
    %}
    {{ parent() }}
{% endblock pageHeader %}

{% block breadcrumbs %}
    {{ parent() }}
    {% if entity.default %}
    <div class="pull-left">
        <div class="badge badge-enabled status-enabled"><i class="icon-status-enabled fa-circle"></i>{{ 'oro.website.default.label'|trans }}</div>
    </div>
    {% endif %}
{% endblock breadcrumbs %}

{% block content_data %}
    {% set websiteInformationWidget %}
        {{ oro_widget_render({
            'widgetType': 'block',
            'title': 'oro.multiwebsite.widgets.website_information'|trans,
            'url': path('oro_multiwebsite_info', {id: entity.id})
        }) }}
    {% endset %}

    {% set generalSectionBlocks = [{'data' : [websiteInformationWidget]}]%}

    {% set dataBlocks = [
        {
            'title': 'oro.multiwebsite.sections.general'|trans,
            'class': 'active',
            'subblocks': generalSectionBlocks
        }
    ] %}


    {% set id = 'website-view' %}
    {% set data = {'dataBlocks': dataBlocks} %}

    {{ parent() }}
{% endblock content_data %}
