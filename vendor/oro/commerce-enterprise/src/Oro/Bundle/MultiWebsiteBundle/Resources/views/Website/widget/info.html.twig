{% import 'OroUIBundle::macros.html.twig' as UI %}
{% import 'OroEntityConfigBundle::macros.html.twig' as entityConfig %}
{% import 'OroAddressBundle::macros.html.twig' as address %}

{% set names = [] %}
{% for localization in localizations.enabled %}
    {% set names = names|merge([localization.name]) %}
{% endfor %}

<div class="widget-content">
    <div class="row-fluid form-horizontal">
        <div class="responsive-block">
            {{ UI.renderProperty('oro.website.name.label'|trans, website.name) }}

            {% if localizations.default is defined and localizations.default %}
                {{ UI.renderProperty('oro.website.default_localization.label'|trans, localizations.default.name) }}
            {% endif %}

            {{ UI.renderProperty('oro.website.enabled_localizations.label'|trans, names|join(', ') ) }}
        </div>
        <div class="responsive-block">
            {{ entityConfig.renderDynamicFields(website) }}
        </div>
    </div>
</div>