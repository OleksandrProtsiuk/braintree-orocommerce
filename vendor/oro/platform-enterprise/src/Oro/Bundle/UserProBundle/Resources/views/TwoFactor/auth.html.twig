{% extends 'OroUserBundle::layout.html.twig' %}

{% block bodyClass %}login-page{% endblock %}
{% block messages %}{% endblock %}
{% block content %}
<div class="container">
    <form id="two-factor-auth-form" action="{{ path('oropro_user_two_factor_check') }}" method="post" class="form-signin form-two-factor">
        <div class="title-box">
            {% if oro_theme_logo() %}
            <h1 class="title logo-{{ oro_theme_logo() ? 'image' : 'text' }}">
                <img src="{{ asset(oro_theme_logo()) }}">
            </h1>
            <span class="divider-vertical"></span>
            {% endif %}
            <h2 class="title">{{ 'oro.userpro.two_factor.form.title'|trans }}</h2>
        </div>
        <fieldset>
            <script type="text/javascript">
                require(['jquery'], function ($) {
                    var $form = $('#two-factor-auth-form');
                    $form.on('submit', function () {
                        $form.find('button').attr('disabled', 'disabled');
                    });
                });
            </script>
            {% if error %}
                <div class="alert alert-error">
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                </div>
            {% endif %}
            <span class="help-block">{{ 'oro.userpro.two_factor.form.help'|trans }}</span>
            <div class="control-group form-row">
                <input type="text" name="_auth_code" required="required" class="input-xlarge" placeholder="{{ 'oro.userpro.two_factor.form.auth_code.placeholder'|trans }}" autofocus />
                <button type="submit" class="btn btn-large btn-primary pull-right">{{ 'oro.userpro.two_factor.form.submit.label'|trans }}</button>
            </div>
        </fieldset>
        <input type="hidden" name="_target_path" value="{{ url('oro_default') }}" />
    </form>
</div>
{% endblock content %}
