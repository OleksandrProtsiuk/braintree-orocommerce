{% extends 'OroNavigationBundle:menuUpdate:update.html.twig' %}

{% set menuIndexRoute  = 'oro_organization_menu_index' %}
{% set menuViewRoute   = 'oro_organization_menu_view' %}
{% set menuCreateRoute = 'oro_organization_menu_create' %}
{% set menuUpdateRoute = 'oro_organization_menu_update' %}

{% oro_title_set({params : {"%organization%": scope.organization.name, "%title%": entity.title|trans()}}) %}
{% set breadcrumbs = {
    'entity': entity,
    'indexPath': path('oro_organizationpro_index'),
    'indexLabel': 'oro.organization.entity_plural_label'|trans,
    'additional': [
        {
            'indexPath': path('oro_organizationpro_view', {id: scope.organization.id}),
            'indexLabel': scope.organization.name
        },
        {
            'indexPath': path(menuIndexRoute, {id: scope.organization.id}),
            'indexLabel': 'oro.navigation.menuupdate.roots_plural_label'|trans
        },
        {
            'indexPath': path(menuViewRoute, {menuName: menuName, scopeId: scope.id}),
            'indexLabel': menuName
        }
    ]
} %}
