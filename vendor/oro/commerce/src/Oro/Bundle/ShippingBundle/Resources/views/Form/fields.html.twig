{% block oro_shipping_method_config_widget %}
    {% if form.method.vars.value %}
        <div class="control-group control-group-choice">
            <div class="control-label wrap">
                {{ form_label(form.method) }}
            </div>
            <div class="controls">
                <input type="text" disabled="disabled" value="{{ methods_labels[form.method.vars.value]|trans }}"/>
                {{ form_widget(form.method) }}
            </div>
        </div>
    {% endif %}
    {{ form_widget(form.typeConfigs) }}
    <div class="control-group control-group-choice">
        <div class="controls">
            {{ form_errors(form.typeConfigs) }}
        </div>
    </div>
    {{ form_widget(form.options) }}
    {{ form_rest(form) }}
{% endblock %}

{% block oro_shipping_method_type_config_collection_widget %}
    {% if is_grouped %}
        {{- block('collection_widget') -}}
    {% else %}
        {% if prototype is defined %}
            {%- set attr = attr|merge({'data-prototype': form_row(prototype) }) -%}
        {% endif %}
        <div {{ block('widget_container_attributes') }}>
            {%- if form.parent is empty -%}
                {{ form_errors(form) }}
            {%- endif -%}
            {% for child in form %}
                {{- form_widget(child) -}}
            {% endfor %}
            {{- form_rest(form) -}}
        </div>
    {% endif %}
{% endblock %}

