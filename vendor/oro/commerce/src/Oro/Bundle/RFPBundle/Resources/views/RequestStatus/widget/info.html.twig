{% import 'OroUIBundle::macros.html.twig' as UI %}

<div class="widget-content">
    <div class="row-fluid form-horizontal">
        <div class="responsive-block">
            {{ UI.renderProperty('oro.rfp.requeststatus.label.label'|trans, entity.label) }}
            {{ UI.renderProperty('oro.rfp.requeststatus.name.label'|trans, entity.name) }}
            {{ UI.renderProperty('oro.rfp.requeststatus.sort_order.label'|trans, entity.sortOrder ? entity.sortOrder : 'N/A') }}
            {{ UI.renderProperty('oro.rfp.requeststatus.deleted.label'|trans, entity.deleted ? 'Yes' : 'No') }}
        </div>
    </div>
</div>
