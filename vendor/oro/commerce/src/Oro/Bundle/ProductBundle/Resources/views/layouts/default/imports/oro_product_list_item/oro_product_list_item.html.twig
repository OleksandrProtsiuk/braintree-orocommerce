        '~class': ' product-item__primary-content product-item__primary-content_{{ class_prefix }}'
    }) %}
    <div {{ block('block_attributes') }}>
        <div class="product-item__primary-half product-item__primary-half_{{ class_prefix }}">
            {{ block_widget(block) }}
        </div>
    </div>
{% endblock %}

{% block __oro_product_list_item__product_number_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': ' product-item__number product-item__number_{{ class_prefix }}'
    }) %}
    <div {{ block('block_attributes') }}>
        Item #: <span class="red">{{ product.sku }}</span>
    </div>
{% endblock %}

